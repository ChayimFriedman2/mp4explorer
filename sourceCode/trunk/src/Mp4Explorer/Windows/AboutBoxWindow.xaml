<Window x:Class="Mp4Explorer.AboutBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Mp4 Explorer"
        Width="400"
        Height="300"
        Icon="/Mp4Explorer;component/App.ico"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <Label Name="labelProductName" />
        <Label Name="labelVersion" />
        <Label Name="labelCopyright" />
        <Label Name="labelCompanyName" />
        <Label Height="30">
            <Hyperlink Hyperlink.RequestNavigate="Hyperlink_RequestNavigate"
                       NavigateUri="http://www.cmstream.net">
                <TextBlock Text="www.cmstream.net" />
            </Hyperlink>
        </Label>
        <Label Name="labelDescription" />
    </StackPanel>
</Window>
